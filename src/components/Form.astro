<div
  class="bg-secondary rounded-3xl flex flex-col justify-center items-center max-w-xl"
>
  <h2 class="text-whiteish">Register dit digitale affald</h2>
  <form class="w-7/12">
    <input
      type="text"
      placeholder="Fornavn"
      class="w-full px-1 pt-3 mb-4 bg-secondary border-b border-whiteish focus:outline-none focus:ring-1 focus:ring-secondarylight placeholder:text-whiteish"
    />
    <br />
    <input
      type="text"
      placeholder="Efternavn"
      class="w-full px-1 pt-3 mb-4 bg-secondary border-b border-whiteish focus:outline-none focus:ring-1 focus:ring-secondarylight placeholder:text-whiteish"
    />
    <br />
    <input
      type="email"
      placeholder="Email"
      class="w-full px-1 pt-3 mb-4 bg-secondary border-b border-whiteish focus:outline-none focus:ring-1 focus:ring-secondarylight placeholder:text-whiteish"
    />
    <br />
    <select
      class="w-full pt-3 mb-4 bg-secondary border-b text-whiteish border-whiteish focus:outline-none focus:ring-1 focus:ring-secondarylight placeholder:text-whiteish"
    >
      <option value="" disabled selected>Land</option>
      <option value="danmark">Danmark</option>
      <option value="norge">Norge</option>
      <option value="sverige">Sverige</option>
      <option value="tyskland">Tyskland</option>
    </select>
    <br />
    <input
      type="text"
      placeholder="Virksomhedsnavn (valgfrit)"
      class="w-full px-1 pt-3 mb-4 bg-secondary border-b border-whiteish focus:outline-none focus:ring-1 focus:ring-secondarylight placeholder:text-whiteish"
    />
    <br />

    <div
      class="flex justify-between items-center border-b text-whiteish border-gray-300 py-3 px-1 pb-0"
    >
      <label for="antal" class="text-white">Antal deltagere</label>
      <input
        id="antal"
        type="number"
        value="1"
        class="text-right bg-secondary w-16 focus:outline-none text-white"
      />
    </div>

    <div
      class="flex justify-between items-center border-b text-whiteish border-gray-300 py-3 relative px-1 pt-6 pb-0"
    >
      <label for="maengde" class="text-white"
        >MÃ¦ngde slettet <span class="px-2">(i GB)</span></label
      >
      <input
        id="maengde"
        type="number"
        value="0"
        class="text-right bg-secondary w-16 focus:outline-none text-white"
      />
      <span
        class="m-[-40px] absolute border flex items-center justify-center rounded-full h-6 w-6 text-accent cursor-pointer font-bold text-xl"
        title="1 GB svarer til 1.024 MB, og 1 MB svarer til 1.024 KB.">?</span
      >
    </div>
  </form>
  <br />
  <input type="submit" value="Registrer" />
</div>
