---
const { imageSrc, altText, headline, paragraphText } = Astro.props;
---

<div class="max-w-[500px] p-4">

    <!-- Base Layout for Larger Screens (two columns in one row) -->
    <div class="hidden sm:flex sm:flex-row sm:space-x-4">

        <!-- Column 1: Headline and Text -->
        <div class="flex flex-col text-left sm:max-w-[60%] mb-4 sm:mb-0">
            <h2 class="text-white text-base sm:text-lg md:text-xl font-semibold mb-2">{headline}</h2>
            <p class="text-white max-w-full sm:max-w-[80%]">
                {paragraphText}
            </p>
        </div>

        <!-- Column 2: Illustration -->
        <div class="flex justify-center items-center sm:ml-4">
            <div class="w-[110px] h-[110px] sm:w-[90px] sm:h-[90px] md:w-[100px] md:h-[100px] lg:w-[120px] lg:h-[120px] 
                        bg-white bg-opacity-20 flex items-center justify-center rounded-full">
                <img src={imageSrc} alt={altText} class="w-full h-full">
            </div>
        </div>
    </div>

    <!-- Layout for Smaller Screens (two rows) -->
    <div class="block sm:hidden max-w-[300px]">

        <!-- Row 1: Headline and Illustration -->
        <div class="flex items-center mb-4 space-x-2"> <!-- Reduced space-x to 2 -->
            <div class="flex flex-col text-left w-full">
                <h2 class="text-white text-base md:text-lg lg:text-xl font-semibold mb-2">{headline}</h2>
            </div>
            <div class="w-[110px] h-[110px] sm:w-[100px] sm:h-[100px] md:w-[100px] md:h-[100px] lg:w-[120px] lg:h-[120px] 
                        bg-white bg-opacity-20 flex items-start justify-center rounded-full">
                <img src={imageSrc} alt={altText} class="w-full h-full">
            </div>
        </div>
    
        <!-- Row 2: Text -->
        <div class="text-white text-base md:text-lg lg:text-xl">
            {paragraphText}
        </div>
</div>