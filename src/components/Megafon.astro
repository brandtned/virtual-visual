<a href="https://www.itmv.dk/pages/donation">
    <div class="mt-5 hidden md:block" style="height: 35px;" x-data="{ sticky: false }"></div>
    <img
      x-data
      @mouseover="hover = true"
      @mouseleave="hover = false"
      :class="{
        'scale-105 border-dashed border-action-color': hover,
        'border border-transparent': !hover,
      }"
      class="mt-5 relative h-9 w-9 rounded-full md:h-16 md:w-16 transition-all duration-300 ease-in-out"
      src="/img/donerSticky_Btn.svg"
      alt="Del med en ven" />
  </a>
  
  <!-- Tailwind CSS inline classes or from your config -->
  <style>
    .border-action-color {
      --tw-border-opacity: 1;
      border-color: rgba(32, 32, 128, var(--tw-border-opacity)); /* replace with your action color */
    }
  </style>
  
  <!-- Alpine.js for the dynamic interaction -->
  <script src="//unpkg.com/alpinejs" defer></script>